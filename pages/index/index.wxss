.container {
  position: relative;
}
.container .banner .banner-swiper {
  height: 375rpx;
}
.container .banner .banner-swiper .banner-swiper-item .pic {
  width: 100%;
}
.container .banner .banner-search {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  right: 30rpx;
  margin: 0 auto;
}
.container .banner .banner-search .search-input {
  width: 100%;
  border: 1rpx solid #e3e3e3;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.8);
  height: 66rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.container .banner .banner-search .buy-list-swiper {
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  border-radius: 32rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 0 32rpx;
  height: 46rpx;
  line-height: 46rpx;
}
.container .banner .banner-search .buy-list-swiper .buy-list-swiper-item .data {
  white-space: nowrap;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.container .banner .banner-search .buy-list-swiper .buy-list-swiper-item .data .head {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 6rpx;
}
.container .banner .banner-search .buy-list-swiper .buy-list-swiper-item .data .name {
  flex-grow: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .discount {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #efeff4;
  padding: 14rpx 20rpx;
}
.container .discount .icon {
  height: 40rpx;
}
.container .discount .discount-swiper {
  margin: 0 20rpx;
  height: 50rpx;
  flex-grow: 1;
  font-size: 24rpx;
  color: rgba(255, 0, 0, 0.712);
}
.container .discount .discount-swiper swiper-item {
  display: flex;
  align-items: center;
}
.container .discount .discount-swiper swiper-item .title {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .discount .more {
  font-size: 24rpx;
}
.container .good-list {
  margin-top: 50rpx;
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.container .good-list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  margin-bottom: 40rpx;
}
.container .good-list .item .icon {
  height: 80rpx;
  margin-bottom: 10rpx;
}
.container .good-list .item .name {
  font-size: 24rpx;
}
.container .zhibo .pic {
  width: 100%;
}
